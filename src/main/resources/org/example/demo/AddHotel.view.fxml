<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.demo.org.example.demo.pictures.AddHotelView"
            prefHeight="400.0" prefWidth="600.0">
    <Pane fx:id="gridPane" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml" fx:controller="your.package.HotelDialogController">
        <padding>
            <Insets top="20" right="150" bottom="10" left="10"/>
        </padding>
        <Label text="Id Alojamiento:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="idAlojamientoField" promptText="Id Alojamiento" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Tipo de Habitación:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="tipoHabitacionCombo" promptText="Tipo de Habitación" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="1 persona"/>
                    <String fx:value="2 personas"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="Nombre:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="nombreField" promptText="Nombre" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Número de Estrellas:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="numeroEstrellasField" promptText="Número de Estrellas" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </Pane>

</AnchorPane>
